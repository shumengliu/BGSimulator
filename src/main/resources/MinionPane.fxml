<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import gui.components.IntField?>
<fx:root type="javafx.scene.layout.BorderPane"
         xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <HBox prefHeight="56.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <IntField fx:id="atkField" alignment="CENTER" prefHeight="69.0" prefWidth="120.0" text="0"/>
                <IntField fx:id="healthField" alignment="CENTER" prefHeight="56.0" prefWidth="120.0" text="0"/>
            </children>
        </HBox>
    </bottom>
    <center>
        <Label alignment="CENTER" prefHeight="140.0" prefWidth="199.0" text="myMinion" BorderPane.alignment="CENTER"/>
    </center>
    <top>
        <Button fx:id="createMinionButton" onAction="#createMinion" mnemonicParsing="false"
                text="Add/Modify Minion"
                BorderPane.alignment="CENTER"/>
    </top>
</fx:root>
